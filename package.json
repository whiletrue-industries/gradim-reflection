{
  "name": "reflect",
  "version": "0.0.0",
  "scripts": {
    "ng": "ng",
    "start": "ng serve",
    "start:main": "ng serve main --port 4200 --host 0.0.0.0",
    "start:sample": "ng serve sample-reflect --port 4201 --host 0.0.0.0",
    "build": "ng build",
    "build:ssr:main": "ng build main --configuration dev-ssr",
    "build:ssr:sample": "ng build sample-reflect --configuration dev-ssr",
    "watch": "ng build --watch --configuration development",
    "test": "ng test",
    "serve:ssr:main": "node dist/main/server/server.mjs",
    "serve:ssr:sample-reflect": "node dist/sample-reflect/server/server.mjs",
    "dev:main": "npm run build:ssr:main && concurrently -n SSR,DEV -c \"bgBlue.bold,bgGreen.bold\" \"npm:serve:ssr:main\" \"ng serve main --port 4200 --host 0.0.0.0 --proxy-config proxy.conf.json\"",
    "dev:sample": "npm run build:ssr:sample && concurrently -n SSR,DEV -c \"bgBlue.bold,bgGreen.bold\" \"npm:serve:ssr:sample-reflect\" \"ng serve sample-reflect --port 4201 --host 0.0.0.0 --proxy-config proxy.conf.json\""
  },
  "prettier": {
    "printWidth": 100,
    "singleQuote": true,
    "overrides": [
      {
        "files": "*.html",
        "options": {
          "parser": "angular"
        }
      }
    ]
  },
  "private": true,
  "packageManager": "npm@11.6.1",
  "dependencies": {
    "@angular/common": "^21.0.0",
    "@angular/compiler": "^21.0.0",
    "@angular/core": "^21.0.0",
    "@angular/forms": "^21.0.0",
    "@angular/platform-browser": "^21.0.0",
    "@angular/platform-server": "^21.0.0",
    "@angular/router": "^21.0.0",
    "@angular/ssr": "^21.0.2",
    "express": "^5.1.0",
    "rxjs": "~7.8.0",
    "tslib": "^2.3.0"
  },
  "devDependencies": {
    "@angular/build": "^21.0.2",
    "@angular/cli": "^21.0.2",
    "@angular/compiler-cli": "^21.0.0",
    "@types/express": "^5.0.1",
    "@types/node": "^20.17.19",
    "concurrently": "^9.0.1",
    "jsdom": "^27.1.0",
    "less": "^4.2.0",
    "ng-packagr": "^21.0.0",
    "typescript": "~5.9.2",
    "vitest": "^4.0.8"
  }
}